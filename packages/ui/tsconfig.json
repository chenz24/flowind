{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "baseUrl": ".",
    "jsx": "react",
    "module": "ES2020",
    "moduleResolution": "Node",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "outDir": "./dist",
    "importHelpers": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
//    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "paths": {
      "@flowind/ui": ["./src/index.tsx"],
      "@/components/*": ["./src/components/*"],
      "@/providers/*": ["./src/providers/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/types": ["./src/types"],
      "@/styles": ["./src/styles"],
    }
  },
  "include": ["src", ".eslintrc.js"],
  "exclude": ["storybook-static", "node_modules", "dist", "build"]
}
