{
  "name": "flowind",
  "private": true,
  "scripts": {
    "test": "turbo run test",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "pnpm build && changeset publish",
    "version": "changeset version && pnpm install --no-immutable",
    "release:beta": "changeset publish --no-git-tags --snapshot --tag beta",
    "version:beta": "changeset version --snapshot beta",
    "release:alpha": "changeset publish --no-git-tags --snapshot --tag alpha",
    "version:alpha": "changeset version --snapshot alpha",
    "generate:icons": "rimraf ./packages/icons/src/components && toolbox icons -o './packages/icons/src/components'",
    "generate:tokens": "toolbox tokens -o './packages/ui-preset/src/theme'"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.18.6",
    "@flowind/eslint-config-ui": "*",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@flowind/toolbox": "*",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "babel-loader": "^9.1.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "rimraf": "^5.0.1",
    "turbo": "latest",
    "typescript": "^5.1.6"
  },
  "workspaces": [
    "packages/*",
    "configs/*"
  ],
  "dependencies": {
    "@changesets/cli": "^2.26.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1"
  },
  "packageManager": "pnpm@8.14.1"
}
